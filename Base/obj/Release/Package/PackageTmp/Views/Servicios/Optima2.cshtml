@model List<Entities.BuquesViajes>
@{
    ViewBag.Title = "Optima2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="well well-sm overflowWell">
            <input type="hidden" value="@ViewBag.Id" name="buqueId" id="buqueId" />
            <div class="row">
                @*<div class="col-md-2">
                        <img id="foto" src="/Uploads/Buques/@(ViewBag.Foto)" alt="@ViewBag.Barco" style="width:100%;">
                    </div>*@
                <div class="col-md-12">
                    <div class="col-md-4"><h3 style="text-align: center; text-decoration: underline;">@ViewBag.Cliente</h3></div>
                    <div class="col-md-4"><h3 style="text-align: center; text-decoration: underline;">@ViewBag.Barco</h3></div>
                    <div class="col-md-4"><a class="btn btn-info btn-large btn-rounded volver" href="@Url.Action("OptimaBuques","Servicios",new {id = ViewBag.Cli})"><i class="fa fa-caret-left"></i> @(((List<Entities.IdiomasPalabras>)Session["Idiomas"]).FirstOrDefault(x => x.IdiPal_Clave == "General - Boton - Volver").IdiPal_Texto)</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form class="form-horizontal rowAlt" role="form" id="formBuquesViajes">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <button type="button" class="btn btn-info btn-large btn-block buqueViaje" onclick="location.href='@Url.Action("Optima3",new {id= item.BuqVia_Id,cli = ViewBag.Cli })'" id="@item.BuqVia_Id">@item.BuqVia_Codigo</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
