                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label>@(((List<Entities.IdiomasPalabras>)Session["Idiomas"]).FirstOrDefault(x => x.IdiPal_Clave == "Buques Viajes - Detalles Traslado - Recorrido").IdiPal_Texto)</label>
                            <select class="form-control input-sm" style="width: 100%;" id="recorrido" name="recorrido">
                                <option></option>
                                @foreach (var item in BusinessLogic.ClasificadoresIdiomasAdmin.GetList("Traslados Recorridos"))
                                {
                                    <option value="@item.Clas_Id">@item.ClasIdi_Texto</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label>@(((List<Entities.IdiomasPalabras>)Session["Idiomas"]).FirstOrDefault(x => x.IdiPal_Clave == "Buques Viajes - Detalles Traslado - Nro Vuelo").IdiPal_Texto)</label>
                            <input id="nroVuelo" name="nroVuelo" type="text" class="form-control input-sm" />
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label>@(((List<Entities.IdiomasPalabras>)Session["Idiomas"]).FirstOrDefault(x => x.IdiPal_Clave == "Buques Viajes - Detalles Traslado - Chofer").IdiPal_Texto)</label>
                            <select class="form-control input-sm" style="width: 100%;" id="chofer" name="chofer">
